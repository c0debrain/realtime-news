@font-face
  font-family 'SanFrancisco'
  src url('/fonts/SanFranciscoText-Light.eot')
  src url('/fonts/SanFranciscoText-Light.eot?#iefix') format('embedded-opentype'),
  url('/fonts/SanFranciscoText-Light.woff') format('woff'),
	url('/fonts/SanFranciscoText-Light.ttf') format('truetype')
