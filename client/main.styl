body, html, main
  width 100%
  height  100%
  margin 0
  padding 0
  background #f8f8fc
  font-family "San Francisco Text"

h1, h2, h3, h4, h5, h6, a, button, input, select, textarea
  font-family "San Francisco Text"

a
  color #FF6C15
  cursor pointer
  text-decoration none

a:hover
  color #a0ddc4
  text-decoration none

h1, h2
  margin 0
  text-align center

h1
  color #FF6C15
  font-weight lighter

h2
  color #999
  font-weight lighter

input
  padding 6px 12px
  border solid 1px #ccc
  border-radius 3px
  display block
  width 100%
  box-sizing border-box

form
  margin 12px 0

hr
  border none
  height 1px
  background #FF6C15

input
    font-size 12pt


.thread .actions
  padding 0 12px

.post .action
  float right


.hide
  display none!important

.full-width
  width 100%
