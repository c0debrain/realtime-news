body, input
    font-family sans-serif
    font-size 12pt

body, html, main
    width 100%
    height  100%
    margin 0
    padding 0

a
  color #27AE60
  cursor pointer
  text-decoration none

a:hover
  color #a0ddc4

h1, h2
    margin 0
    text-align center

h1
    color #27AE60
    font-weight lighter

h2
    color #999
    font-weight lighter

input
    padding 6px 12px
    border solid 1px #ccc
    border-radius 3px
    display block
    width 100%
    box-sizing border-box

form
    margin 12px 0

hr
    border none
    height 1px
    background #27AE60

.thread .actions
  padding 0 12px

.post .action
  float right

.home-page
  display table
  width 100%
